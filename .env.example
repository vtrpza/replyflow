# GitHub Personal Access Token (optional but recommended for higher rate limits)
# Create one at: https://github.com/settings/tokens
# Scopes needed: public_repo (or just no scope for public repos)
GITHUB_TOKEN=ghp_your_token_here

# Resend API Key (optional - for sending emails directly)
# Sign up at: https://resend.com
RESEND_API_KEY=re_your_key_here

# Sender email - must be verified in Resend dashboard for production
RESEND_SENDER_EMAIL=your-email@example.com

# NextAuth Configuration
NEXTAUTH_URL=http://localhost:3000
NEXTAUTH_SECRET=your-nextauth-secret-here-change-in-production

# Google OAuth - Create at https://console.cloud.google.com/apis/credentials
# 1. Create OAuth 2.0 Client ID credentials
# 2. Set authorized redirect URIs to:
#    - http://localhost:3000/api/auth/callback/google (for NextAuth sign-in)
#    - http://localhost:3000/api/accounts/callback (for connecting Gmail in settings)
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret
GOOGLE_REDIRECT_URI=http://localhost:3000/api/auth/callback/google
GOOGLE_CONNECT_REDIRECT_URI=http://localhost:3000/api/accounts/callback

# System sync endpoint protection token (required for /api/sync/system)
# Send this value in request header: x-replyflow-sync-token
REPLYFLOW_SYNC_TOKEN=replace-with-long-random-token

# Sentry error reporting (optional)
# Get your DSN from https://sentry.io
# For client-side capture, set NEXT_PUBLIC_SENTRY_DSN too (same value)
SENTRY_DSN=
NEXT_PUBLIC_SENTRY_DSN=

# Pre-release mode
# When true, all users get unlimited access (pro features) without billing.
REPLYFLOW_PRE_RELEASE=false
NEXT_PUBLIC_PRE_RELEASE=false

# Billing (Asaas)
# Keep ASAAS_API_KEY exactly as provided (including any leading '$' character).
BILLING_PROVIDER=asaas
ASAAS_ENV=sandbox
ASAAS_API_KEY=$aact_your_asaas_key_here
ASAAS_BASE_URL=https://api-sandbox.asaas.com/v3
ASAAS_CHECKOUT_BASE_URL=https://sandbox.asaas.com
# Required. Webhook requests are rejected if token is missing or invalid.
ASAAS_WEBHOOK_TOKEN=replace-with-random-webhook-token
ASAAS_SUCCESS_URL=http://localhost:3000/app/billing/success
ASAAS_CANCEL_URL=http://localhost:3000/app/billing/cancel
PLAN_PRO_MONTHLY_BRL_CENTS=3900
BILLING_GRACE_DAYS=3
BILLING_RECONCILE_TOKEN=replace-with-long-random-token
